








































<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Add Address
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Address</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form action="/address" method="post">
                    <div class="row">
                        <div class="col-lg-12 ">
                            <div class="billing-info mb-20">
                                <label>Your Name <abbr class="required" title="required"
                                        aria-required="true">*</abbr></label>
                                <input type="text" name="name">
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="billing-info mb-20">
                                <label>Street Address <abbr class="required" title="required">*</abbr></label>
                                <input class="billing-address" placeholder="House number and street name" type="text"
                                    name="firstLine" aria-required="true">
                                <input class="billing-address" placeholder="Township name" type="text" name="secondLine"
                                    aria-required="true">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="billing-info mb-20">
                                <label>Town / City <abbr class="required" title="required">*</abbr></label>
                                <input type="text" name="city" aria-required="true">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div class="billing-info mb-20">
                                <label>State / County <abbr class="required" title="required">*</abbr></label>
                                <input type="text" name="state" aria-required="true">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div class="billing-info mb-20">
                                <label>Postcode / ZIP <abbr class="required" title="required">*</abbr></label>
                                <input type="text" name="pincode" aria-required="true">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div class="billing-info mb-20">
                                <label>Phone <abbr class="required" title="required">*</abbr></label>
                                <input type="text" name="contactNumber" aria-required="true">
                            </div>
                        </div>
                    </div>
                    <div class="single-product-cart btn-hover">
                        <button type="submit" class="btn btn-success">Submit</button>

                    </div>
                </form>
            </div>
        </div>




    </div>
</div>
        
      




















<div style="margin-left:350px; margin-right:auto;">
<div class="mb-20"style="text-align: center;">
    <h5 style="padding-right:15cm">Address</h5>
</div>

            
<label>
    <span class="card" style="display: inline-block; width: calc(100% - 24px); padding-left: 5cm;
                            vertical-align: top; margin-right: 100px;">
                            <% if(addresses.address.length > 0){ %>
                                <% addresses.address.forEach(function(address) { %>                            
                <span class="card-body">

                    <input type="radio" name="address" value="<%=address._id%>"
                        style="transform: scale(0.3); margin-left: 20%;">
                    <ul>
                        
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=address.name%>
                                    </h5>
                                    <p class="card-text">
                                        <%=address.contactNumber%>
                                    </p>
                                    <p class="card-text">
                                        <%=address.firstLine%>
                                    </p>
                                    <p class="card-text">
                                        <%=address.secondLine%>
                                    </p>
                                    <p class="card-text">
                                        <%=address.city%>
                                    </p>
                                    <p class="card-text">
                                        <%=address.state%>
                                    </p>
                                    <p class="card-text">
                                        <%=address.pincode%>
                                    </p>

                    </ul>
               
                </span>
                <% }); %>
                <% } else{ %>  
                    <p>no address found</p>
                <% } %>                                    
    </span>
</label>
  
  
</form>
